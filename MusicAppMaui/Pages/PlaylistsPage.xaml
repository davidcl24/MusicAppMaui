<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicAppMaui.Pages.PlaylistsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="30,0" Spacing="25">
                <Label Text="Tus Listas de ReproducciÃ³n"
                           Style="{StaticResource Headline}"
                           FontAttributes="Bold"
                           SemanticProperties.HeadingLevel="Level1" 
                           HorizontalTextAlignment="Start"
                           HorizontalOptions="Start"/>

                <CollectionView x:Name="PlaylistsCollection"
                                    ItemsSource="{Binding Playlists}"
                                    SelectionMode="Single"
                                    VerticalOptions="FillAndExpand">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                             Span="2" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10"
                                      ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <BoxView Grid.Column="0"
                                             BackgroundColor="DarkGrey"
                                             HeightRequest="140"
                                             WidthRequest="140"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"/>

                                <Label Grid.Column="0"
                                           Text="{Binding Title}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="White" 
                                           LineBreakMode="TailTruncation"
                                           MaxLines="1"/>

                                <Label Grid.Column="1"
                                           Text="{Binding Description}"
                                           VerticalOptions="Center"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="White" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </VerticalStackLayout>

        </ScrollView>

        <Button WidthRequest="60"
                    HorizontalOptions="End"
                    Margin="0,0,20,20" 
                    Grid.Row="1" 
                    Command="{Binding ShowPopupCommand}">
            <Button.ImageSource>
                <FontImageSource Glyph="add_circle_outline" FontFamily="MaterialIcons"/>
            </Button.ImageSource>
        </Button>

    </Grid>
</ContentPage>